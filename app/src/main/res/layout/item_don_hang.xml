<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvMaDHDonHang"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="DH11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIDKhachDonHang"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="lethaisan"
        app:layout_constraintStart_toEndOf="@+id/tvMaDHDonHang"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNgayDatDonHang"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="19/11/1193"
        app:layout_constraintStart_toEndOf="@+id/tvIDKhachDonHang"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGioDatDonHang"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="13:13:13"
        app:layout_constraintStart_toEndOf="@+id/tvNgayDatDonHang"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTongTienDonHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="100000"
        app:layout_constraintStart_toEndOf="@+id/tvGioDatDonHang"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>